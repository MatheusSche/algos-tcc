#:kivy 2.0.0

<MyBoxLayout>:
    orientation: 'horizontal'
    background_color: (1,1,1,1)
    padding: 10
    spacing: 10
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        background_color: (1,1,1,1)
        Button:
            text: 'Buscar Imagem'
            size_hint: 0.5, 0.1
            font_size: 20
            on_press: root.busca_imagem()
        Image:
            background_color: (1,1,1,1)
            source: root.imagem_original 
            width: 100
            allow_stretch: True
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1.0, 0.2
            padding: 10
            spacing: 10
            Button:
                text: 'Entrada'
                size_hint: 0.1, 0.2
                font_size: 20
            TextInput:
                id: input
                size_hint: 0.2, 0.6
                pos_hint: {"center_y": .1}
                hint_text: "Personalizar entrada"
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1.0, 0.2
            padding: 5
            spacing: 5
            Spinner:
                id: espaciais
                text: 'Espaciais'
                size_hint: 1.0, 1.0
                font_size: '15sp'
                background_normal: ''
                background_color: (0,0,1,1)
                values: ['Média', 'Gaussiano', 'Mediana', 'Sobel x', 'Sobel y', 'Laplaciano', 'Canny']
            Button:
                id: btnespaciais
                text: 'E'
                size_hint: 0.2, 1.0
                font_size: '15sp'
                background_normal: ''
                background_color: (1,0,0,1)
                on_release: root.spinner_espaciais(espaciais.text)
            Spinner:
                id: frequencia
                text: 'Frequência'
                size_hint: 1.0, 1.0
                font_size: '15sp'
                background_normal: ''
                background_color: (0,0,1,1)
                values: ['PB-Ideal', 'PB-Butterworth','PB-Gaussiano', 'PA-Ideal', 'PA-Butterworth', 'PA-Gaussiano' ] 
            Button:
                id: btnfrequencia
                text: 'F'
                size_hint: 0.2, 1.0
                font_size: '15sp'
                background_normal: ''
                background_color: (1,0,0,1)
                on_release: root.spinner_frequencia(frequencia.text)
            Spinner:
                id: geometricas
                text: 'Geométricas'
                size_hint: 1.0, 1.0
                font_size: '15sp'
                background_normal: ''
                background_color: (0,0,1,1)
                values: ['Rotação', 'Espelhamento', 'Translação', 'Ajuste Escala']
            Button:
                id: btngeometricas
                text: 'G'
                size_hint: 0.2, 1.0
                font_size: '15sp'
                background_normal: ''
                background_color: (1,0,0,1)
                on_release: root.spinner_geometricas(geometricas.text)
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Label:
            size_hint: 1.0, 0.1
            text: root.label_filtro
            font_size: 20
            background_color: (0, 0, 1, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
        Image:
            background_color: (1,1,1,1)
            source: root.imagem_filtrada 
            width: 80
            allow_stretch: True
        
            
        
    